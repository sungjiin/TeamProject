<Page x:Class="TeamProject2.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamProject2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main" Background="#FF0B5164">

    <Border Background="#FF215C6C" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="용인대학교 학사 관리 시스템" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,80,0,0" FontSize="48" FontFamily="TmonMonsoriOTF Black" Height="71" Foreground="White"/>
            <Separator></Separator>
            <Button x:Name="btnstudent" Content="학생 전용 학사관리 " HorizontalAlignment="Left" VerticalAlignment="Top" Width="360" Margin="180,50,0,0" FontSize="24" Click="Btnstudent_Click" Height="37" FontFamily="TmonMonsoriOTF Black" Background="#FF9A9A9A" Foreground="White" />
            <Label Content="" Foreground="White"/>
            <Button x:Name="manager" Content="관리자 전용 학사관리 " HorizontalAlignment="Left" VerticalAlignment="Top" Width="360" Margin="180,0,0,0" FontSize="24" Click="Manager_Click" Height="37" FontFamily="TmonMonsoriOTF Black" Background="#FF9A9A9A" Foreground="White" />
        </StackPanel>
    </Border>
</Page>
